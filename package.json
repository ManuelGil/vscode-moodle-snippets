{
  "name": "vscode-moodle-snippets",
  "displayName": "Moodle Pack",
  "description": "ðŸŽ“ This extension provides Moodle snippets for PHP, XML and Mustache files. It also provides commands to create new files for Moodle.",
  "version": "1.9.0",
  "icon": "icon.png",
  "license": "MIT",
  "publisher": "imgildev",
  "author": {
    "name": "Manuel Gil",
    "url": "https://github.com/ManuelGil"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/manuelgil"
  },
  "engines": {
    "vscode": "^1.53.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters",
    "Keymaps",
    "Other"
  ],
  "keywords": [
    "autocomplete",
    "autocomplete-functionality",
    "commands",
    "completion",
    "grammars",
    "grammars-utility",
    "keybindings",
    "keymaps",
    "latam",
    "moodle",
    "moodle-tool",
    "moodle-lms",
    "moodle-plugin",
    "moodle-plugins",
    "mustache",
    "mustache-implementations",
    "mustache-templates",
    "mustache-templating",
    "mustachejs",
    "php",
    "snippets",
    "snippets-collection",
    "snippets-collections",
    "snippets-library",
    "snippets-plugin",
    "syntax",
    "template",
    "template-language",
    "template-matching",
    "xml",
    "xml-schema"
  ],
  "homepage": "https://github.com/ManuelGil/vscode-moodle-snippets",
  "repository": {
    "type": "git",
    "url": "https://github.com/ManuelGil/vscode-moodle-snippets"
  },
  "bugs": {
    "url": "https://github.com/ManuelGil/vscode-moodle-snippets/issues"
  },
  "extensionPack": [
    "imgildev.vscode-mustache-snippets"
  ],
  "activationEvents": [
    "onCommand:moodle.file.mustache",
    "onCommand:moodle.file.php",
    "onCommand:moodle.file.xml",
    "onCommand:moodle.file.table",
    "onCommand:moodle.file.access",
    "onCommand:moodle.file.lib",
    "onCommand:moodle.file.version",
    "onLanguage:php",
    "onLanguage:xml",
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "id": "moodle",
      "title": "Moodle Pack",
      "properties": {
        "moodle.author_fullname": {
          "type": "string",
          "default": "author_fullname",
          "description": "Author's full name"
        },
        "moodle.author_link": {
          "type": "string",
          "default": "author_link",
          "description": "Author's email or link"
        }
      }
    },
    "snippets": [
      {
        "language": "php",
        "path": "./snippets/GLOBAL/CFG.json"
      },
      {
        "language": "php",
        "path": "./snippets/GLOBAL/DB.json"
      },
      {
        "language": "php",
        "path": "./snippets/GLOBAL/OUTPUT.json"
      },
      {
        "language": "php",
        "path": "./snippets/GLOBAL/PAGE.json"
      },
      {
        "language": "php",
        "path": "./snippets/GLOBAL/USER.json"
      },
      {
        "language": "php",
        "path": "./snippets/lib/moodlelib.json"
      },
      {
        "language": "php",
        "path": "./snippets/lib/plugins.json"
      },
      {
        "language": "php",
        "path": "./snippets/php-language.json"
      },
      {
        "language": "xml",
        "path": "./snippets/xml-language.json"
      }
    ],
    "commands": [
      {
        "command": "moodle.file.mustache",
        "title": "New Mustache File",
        "category": "Moodle"
      },
      {
        "command": "moodle.file.php",
        "title": "New PHP File",
        "category": "Moodle"
      },
      {
        "command": "moodle.file.xml",
        "title": "New XML File",
        "category": "Moodle"
      },
      {
        "command": "moodle.file.table",
        "title": "New Table File",
        "category": "Moodle"
      },
      {
        "command": "moodle.file.access",
        "title": "New Access File",
        "category": "Moodle"
      },
      {
        "command": "moodle.file.lib",
        "title": "New Lib File",
        "category": "Moodle"
      },
      {
        "command": "moodle.file.version",
        "title": "New Version File",
        "category": "Moodle"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+alt+m",
        "command": "moodle.file.mustache"
      },
      {
        "key": "ctrl+alt+p",
        "command": "moodle.file.php"
      },
      {
        "key": "ctrl+shift+v",
        "command": "moodle.file.version"
      }
    ],
    "submenus": [
      {
        "id": "moodle.submenu",
        "label": "Moodle Pack"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "moodle.submenu",
          "group": "2_workspace",
          "when": "explorerViewletFocus && explorerResourceIsFolder"
        }
      ],
      "moodle.submenu": [
        {
          "command": "moodle.file.mustache",
          "alt": "New Mustache File",
          "group": "1_file"
        },
        {
          "command": "moodle.file.php",
          "alt": "New PHP File",
          "group": "1_file"
        },
        {
          "command": "moodle.file.xml",
          "alt": "New XML File",
          "group": "1_file"
        },
        {
          "command": "moodle.file.table",
          "alt": "New Table File",
          "group": "1_file"
        },
        {
          "command": "moodle.file.access",
          "alt": "New Access File",
          "group": "1_file"
        },
        {
          "command": "moodle.file.lib",
          "alt": "New Lib File",
          "group": "1_file"
        },
        {
          "command": "moodle.file.version",
          "alt": "New Version File",
          "group": "1_file"
        }
      ]
    },
    "jsonValidation": [
      {
        "fileMatch": ".vscode/settings.json",
        "url": "./schemas/config.schema.json"
      }
    ]
  },
  "scripts": {
    "lint": "eslint --ext .js ./ --fix",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.53.0",
    "eslint": "^8.24.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^5.0.0",
    "glob": "^7.1.6",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "mocha": "^8.3.0",
    "prettier": "3.0.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "lint-staged": {
    "*.(js)": "npm run lint"
  }
}
