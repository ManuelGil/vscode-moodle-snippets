{
    "block": {
        "prefix": [
            "{{$",
            "block"
        ],
        "body": [
            "{{$ ${name} }}",
            "\t$1",
            "{{/ ${name} }}"
        ],
        "description": "When a template uses inheritance and if you want to print a block multiple times, use the block function"
    },
    "section": {
        "prefix": [
            "{{#",
            "section"
        ],
        "body": [
            "{{# ${name} }}",
            "\t$1",
            "{{/ ${name} }}"
        ],
        "description": "The section statement in Mustache is comparable with the if statements of PHP"
    },
    "inverted section": {
        "prefix": [
            "{{^",
            "inverted section"
        ],
        "body": [
            "{{^ ${condition} }}",
            "\t$2",
            "{{/ ${condition} }}"
        ],
        "description": "The inverted section statement in Mustache is comparable with the else statements of PHP"
    },
    "comment": {
        "prefix": [
            "{{!",
            "comment"
        ],
        "body": [
            "{{!",
            "\t$1",
            "}}"
        ],
        "description": "Mustache snippets"
    },
    "include": {
        "prefix": [
            "{{>",
            "include"
        ],
        "body": "{{> ${filename} }}",
        "description": "The include statement includes a template and returns the rendered content of that file into the current namespace"
    },
    "extends": {
        "prefix": [
            "{{<",
            "extends"
        ],
        "body": "{{< ${filename} }}",
        "description": "Mustache snippets"
    }
}